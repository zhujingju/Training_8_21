<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_marginBottom="@dimen/dip_10.0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_48.0">
                <ImageView
                    android:id="@+id/cp_fh"
                    android:background="@drawable/fh"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dip_10.0"
                    android:layout_width="@dimen/dip_40.0"
                    android:layout_height="@dimen/dip_40.0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/dip_18.0"
                    android:text="@string/personal_2"
                    />



                <!--<TextView-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dip_0.5"-->
                <!--android:background="#fff"-->
                <!--/>-->
            </RelativeLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/personal_lin1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50.0">
                <TextView
                    android:text="@string/personal_3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_16.0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_15.0"
                    android:layout_width="@dimen/dip_120.0"
                    android:layout_height="wrap_content" />

                <EditText
                    android:imeOptions="actionDone"
                    android:layout_marginRight="@dimen/dip_5.0"
                    android:id="@+id/personal_ed2"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_16.0"
                    android:text=""
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/dip_15.0"
                android:id="@+id/personal_xian1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white2" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/personal_lin2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50.0">
                <TextView
                    android:text="@string/personal_4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_16.0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_15.0"
                    android:layout_width="@dimen/dip_120.0"
                    android:layout_height="wrap_content" />

                <EditText
                    android:imeOptions="actionNext"
                    android:layout_marginRight="@dimen/dip_5.0"
                    android:id="@+id/personal_ed3"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_16.0"
                    android:text=""
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/dip_15.0"
                android:visibility="gone"
                android:id="@+id/personal_xian2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white2" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/personal_lin3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50.0">
                <TextView
                    android:text="@string/personal_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_16.0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_15.0"
                    android:layout_width="@dimen/dip_120.0"
                    android:layout_height="wrap_content" />

                <EditText
                    android:imeOptions="actionDone"
                    android:layout_marginRight="@dimen/dip_5.0"
                    android:id="@+id/personal_ed4"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_16.0"
                    android:text=""
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/dip_15.0"
                android:visibility="gone"
                android:id="@+id/personal_xian3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white2" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dip_15.0"
            android:text="@string/personal_8"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dip_10.0"
            />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>