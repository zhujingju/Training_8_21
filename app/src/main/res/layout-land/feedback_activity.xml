<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_marginBottom="@dimen/dip_10.0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_48.0">
            <ImageView
                android:id="@+id/cp_fh"
                android:background="@drawable/fh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_10.0"
                android:layout_width="@dimen/dip_40.0"
                android:layout_height="@dimen/dip_40.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dip_18.0"
                android:text="@string/pre_fk"
                />



            <!--<TextView-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dip_0.5"-->
            <!--android:background="#fff"-->
            <!--/>-->
        </RelativeLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/dip_10.0"
            android:layout_marginLeft="@dimen/dip_20.0"
            android:layout_marginRight="@dimen/dip_20.0"
            android:layout_marginBottom="@dimen/dip_20.0"
            android:orientation="vertical"
            android:id="@+id/personal_lin1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:imeOptions="actionDone"
                android:id="@+id/fk_ed"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_16.0"
                android:hint="请提出您的宝贵意见！！！"
                android:background="@drawable/kuang_b"
                android:gravity="top"
                android:padding="@dimen/dip_10.0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dip_10.0"
                />

            <Button
                android:textColor="@color/white"
                android:textSize="@dimen/dip_18.0"
                android:text="发送"
                android:background="@drawable/kuang_b"
                android:layout_width="@dimen/dip_60.0"
                android:layout_height="@dimen/dip_40.0"
                android:id="@+id/fk_fs"
                android:layout_gravity="right"
                />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>