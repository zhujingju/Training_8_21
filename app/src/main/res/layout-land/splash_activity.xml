<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    >
    <ImageView
        android:src="@drawable/app_shan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/splashactivaty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:persistentDrawingCache="animation" >
        </android.support.v4.view.ViewPager>

        <TextView
            android:id="@+id/sp_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:textSize="@dimen/dip_20.0" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dip_10.0"
            android:layout_marginBottom="@dimen/dip_28.5"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/dip_10.0"
                android:layout_height="@dimen/dip_10.0"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fyf_on" />

            <View
                android:layout_width="@dimen/dip_10.0"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/dip_10.0"
                android:layout_height="@dimen/dip_10.0"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fyf_off" />

            <View
                android:layout_width="@dimen/dip_10.0"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/dip_10.0"
                android:layout_height="@dimen/dip_10.0"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fyf_off" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>