<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/week_pop_lin"
    >

    <LinearLayout

        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40.0"
            android:background="#F8F8F8">

            <TextView
                android:id="@+id/week_pop_tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="确认"
                android:layout_marginRight="@dimen/dip_22.0"
                android:textColor="@drawable/raz2"
                android:textSize="@dimen/dip_18.0" />

            <TextView
                android:id="@+id/week_pop_tv_qx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/dip_22.0"
                android:text="取消"
                android:textColor="@drawable/raz2"
                android:textSize="@dimen/dip_18.0"
                />
        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
