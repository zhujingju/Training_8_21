                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/week_pop_layout1"
                    android:layout_marginLeft="@dimen/dip_22.0"
                    android:layout_marginRight="@dimen/dip_22.0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_50.0">
                    <TextView
                        android:id="@+id/week_pop_tv1"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周一"
                        android:textSize="@dimen/dip_18.0"
                        android:textColor="#000"
                        />
                    <ImageView
                        android:background="@drawable/control_selected_normal"
                        android:id="@+id/week_pop_im1"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/dip_40.0"
                        android:layout_height="@dimen/dip_40.0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/week_pop_layout2"
