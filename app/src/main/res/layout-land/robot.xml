<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:visibility="gone"
            android:id="@+id/jqr"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="机器人"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/robot_add"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="添加"
            />

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dip_20.0"
        android:layout_marginRight="@dimen/dip_20.0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_120.5"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout

                android:background="@color/app_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50.0">

                <Button
                    android:id="@+id/control_sm"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dip_20.0"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dip_25.0"
                    android:layout_height="@dimen/dip_25.0"
                    android:background="@drawable/scan_1080"
                    />


                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_18.0"
                    android:text="机器人"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <com.grasp.training.swipemenulistview.SwipeMenuListView
                android:scrollbars="none"
                android:layout_margin="@dimen/dip_15.0"
                android:id="@+id/robot_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="#0000"
                android:background="#0000"
                android:listSelector="#00000000">


            </com.grasp.training.swipemenulistview.SwipeMenuListView>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>