<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50.0"
            android:background="@color/app_color">

            <ImageView
                android:id="@+id/scenario_add"
                android:layout_width="@dimen/dip_35.0"
                android:layout_height="@dimen/dip_35.0"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_10.0"
                android:background="@drawable/icon_tianjiashebei_normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="应用场景"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_18.0" />
        </RelativeLayout>

        <com.grasp.training.swipemenulistview.SwipeMenuListView
            android:id="@+id/scenario_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dip_15.0"
            android:background="#0000"
            android:cacheColorHint="#00000000"
            android:divider="#0000"
            android:listSelector="#00000000">

        </com.grasp.training.swipemenulistview.SwipeMenuListView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>