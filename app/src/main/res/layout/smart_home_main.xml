<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout

            android:background="@color/app_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50.0">



            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/dip_18.0"
                android:text="智能家居"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/smart_hame_sx"
                android:textColor="@color/c_1eac94"
                android:textSize="@dimen/dip_16.0"
                android:text="筛选"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dip_10.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dip_10.0"
            android:layout_marginLeft="@dimen/dip_20.0"
            android:layout_marginRight="@dimen/dip_20.0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_100.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smart_tv_wd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_36.0" />

                    <TextView
                        android:id="@+id/smart_tv_wd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_2.5"
                        android:text="℃"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_17.5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_20.0"
                    android:text="@string/ie_sn_wd"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/dip_15.0" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dip_0.5"
                android:layout_height="@dimen/dip_22.0"
                android:layout_marginBottom="@dimen/dip_15.0"
                android:background="@color/app_color" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smart_tv_sd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:singleLine="true"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_36.0" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/smart_tv_sd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_2.5"
                        android:text="%"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_17.5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_20.0"
                    android:text="天气"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/dip_15.0" />

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/dip_0.5"
                android:layout_height="@dimen/dip_22.0"
                android:layout_marginBottom="@dimen/dip_15.0"
                android:background="@color/app_color" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smart_tv_pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_36.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_2.5"
                        android:text=""
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_17.5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_20.0"
                    android:text="@string/ie_sn_pm"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/dip_15.0" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ></LinearLayout>
        <com.grasp.training.view.MyGridView
            android:layout_margin="@dimen/dip_3.5"
            android:id="@+id/smart_home_MyGridView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="#0000"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:horizontalSpacing="@dimen/dip_7.0"
            android:verticalSpacing="@dimen/dip_7.0"
            android:numColumns="2"

            >

        </com.grasp.training.view.MyGridView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/del_sid"
            android:textColor="@color/app_color"
            android:textSize="@dimen/dip_12.0"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dip_3.5"
            />
        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/smart_hone_main_add"
            />

    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/smart_home_sx_lin"
            android:paddingLeft="@dimen/dip_5.5"
            android:paddingRight="@dimen/dip_5.5"
            android:layout_marginTop="@dimen/dip_60.0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10.0"
            android:gravity="center_vertical"
            android:background="@drawable/kuang_l_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dip_40.0"
            android:orientation="horizontal"
            >
            <TextView
                android:singleLine="true"
                android:maxWidth="@dimen/dip_60.0"
                android:textSize="@dimen/dip_14.0"
                android:id="@+id/smart_home_sx_tv"
                android:text="默认"
                android:textColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/zhu_del"
                android:id="@+id/smart_home_sx_del"
                android:layout_width="@dimen/dip_15.0"
                android:layout_height="@dimen/dip_15.0" />


        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>