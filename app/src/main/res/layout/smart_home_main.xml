<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/dip_10.0"
            android:layout_marginLeft="@dimen/dip_20.0"
            android:layout_marginRight="@dimen/dip_20.0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_133.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smart_tv_wd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_36.0" />

                    <TextView
                        android:id="@+id/smart_tv_wd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_2.5"
                        android:text="℃"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_17.5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_20.0"
                    android:text="@string/ie_sn_wd"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/dip_15.0" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dip_0.5"
                android:layout_height="@dimen/dip_22.0"
                android:layout_marginBottom="@dimen/dip_15.0"
                android:background="@color/app_color" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smart_tv_sd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:singleLine="true"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_36.0" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/smart_tv_sd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_2.5"
                        android:text="%"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_17.5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_20.0"
                    android:text="天气"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/dip_15.0" />

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/dip_0.5"
                android:layout_height="@dimen/dip_22.0"
                android:layout_marginBottom="@dimen/dip_15.0"
                android:background="@color/app_color" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smart_tv_pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_36.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_2.5"
                        android:text=""
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/dip_17.5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dip_20.0"
                    android:text="@string/ie_sn_pm"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/dip_15.0" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ></LinearLayout>
        <com.grasp.training.view.MyGridView
            android:layout_margin="@dimen/dip_3.5"
            android:id="@+id/smart_home_MyGridView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="#0000"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:horizontalSpacing="@dimen/dip_7.0"
            android:verticalSpacing="@dimen/dip_7.0"
            android:numColumns="2"

            >

        </com.grasp.training.view.MyGridView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/del_sid"
            android:textColor="@color/app_color"
            android:textSize="@dimen/dip_12.0"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dip_3.5"
            />
        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/smart_hone_main_add"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>