<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_marginLeft="@dimen/dip_5.0"
      android:layout_marginRight="@dimen/dip_5.0"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >
      <LinearLayout
          android:id="@+id/data_notification_layout1"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          >
          <ImageView
              android:layout_marginRight="@dimen/dip_10.0"
              android:id="@+id/data_notification_im1"
              android:layout_width="@dimen/dip_32.0"
              android:layout_height="@dimen/dip_32.0" />
          <TextView
              android:layout_width="@dimen/dip_40.0"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_height="wrap_content"
              android:id="@+id/data_notification_tv1"
              android:textColor="@color/c_000000"
              android:textSize="@dimen/dip_12.0"
              android:layout_marginRight="@dimen/dip_10.0"
              />

      </LinearLayout>
      <LinearLayout
          android:id="@+id/data_notification_layout2"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          >
          <ImageView
              android:layout_marginRight="@dimen/dip_10.0"
              android:id="@+id/data_notification_im2"
              android:layout_width="@dimen/dip_32.0"
              android:layout_height="@dimen/dip_32.0" />
          <TextView
              android:layout_width="@dimen/dip_40.0"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_height="wrap_content"
              android:id="@+id/data_notification_tv2"
              android:textColor="@color/c_000000"
              android:textSize="@dimen/dip_12.0"
              android:layout_marginRight="@dimen/dip_10.0"
              />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/data_notification_layout3"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          >
          <ImageView
              android:layout_marginRight="@dimen/dip_10.0"
              android:id="@+id/data_notification_im3"
              android:layout_width="@dimen/dip_32.0"
              android:layout_height="@dimen/dip_32.0" />
          <TextView
              android:layout_width="@dimen/dip_40.0"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_height="wrap_content"
              android:id="@+id/data_notification_tv3"
              android:textColor="@color/c_000000"
              android:textSize="@dimen/dip_12.0"
              android:layout_marginRight="@dimen/dip_10.0"
              />
      </LinearLayout>




  </LinearLayout>

</RelativeLayout>