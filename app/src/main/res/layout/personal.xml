<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/personal_layout"
            android:background="@drawable/layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_120.0">
            <ImageView
                android:layout_marginLeft="@dimen/dip_60.0"
                android:layout_gravity="center"
                android:id="@+id/personal_tx"
                android:layout_width="@dimen/dip_100.0"
                android:layout_height="@dimen/dip_100.0"
                android:layout_centerVertical="true"
                android:src="@drawable/personalcenter_tabbar_portrait_selected" />
            
            <LinearLayout

                android:layout_marginLeft="@dimen/dip_200.0"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/personal_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zjj"
                    android:textSize="@dimen/dip_23.0"
                    android:textColor="@color/c_000000"
                    />
                <TextView
                    android:id="@+id/personal_tv_sb"
                    android:layout_marginTop="@dimen/dip_5.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dip_15.0"
                    android:textColor="@color/white2"
                    />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50.0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dip_18.0"
                android:textColor="@color/c_000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_20.0"
                android:text="aaaaa"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/per_tui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>