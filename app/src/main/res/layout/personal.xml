<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/personal_layout"
            android:background="@drawable/layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_100.0">
            <ImageView
                android:layout_marginLeft="@dimen/dip_40.0"
                android:layout_gravity="center"
                android:id="@+id/personal_tx"
                android:layout_width="@dimen/dip_80.0"
                android:layout_height="@dimen/dip_80.0"
                android:layout_centerVertical="true"
                android:src="@drawable/personalcenter_tabbar_portrait_selected" />
            
            <LinearLayout

                android:layout_marginLeft="@dimen/dip_150.0"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/personal_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zjj"
                    android:textSize="@dimen/dip_20.0"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/personal_tv_sb"
                    android:layout_marginTop="@dimen/dip_5.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无设备"
                    android:textSize="@dimen/dip_15.0"
                    android:textColor="@color/white2"
                    />
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>