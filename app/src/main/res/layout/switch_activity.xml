<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/switch_tv"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="@dimen/dip_150.0"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="@dimen/dip_25.0"
            android:text="智能插aaaaaaaaa座"
            android:layout_marginTop="@dimen/dip_20.0"
            />

        <Button
            android:id="@+id/switch_fh"
            android:layout_marginLeft="@dimen/dip_20.0"
            android:layout_marginTop="@dimen/dip_20.0"
            android:layout_width="@dimen/dip_33.0"
            android:layout_height="@dimen/dip_33.0"
            android:background="@drawable/fh"
            />

        <Button
            android:onClick="put_sz"
            android:id="@+id/switch_sz"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_20.0"
            android:layout_marginTop="@dimen/dip_20.0"
            android:layout_width="@dimen/dip_33.0"
            android:layout_height="@dimen/dip_33.0"
            android:background="@drawable/personalcenter_tabbar_setup_selected"
            />



        <RelativeLayout
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10.0"
            android:layout_marginBottom="@dimen/dip_10.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="@dimen/dip_5.0"
                android:layout_alignParentRight="true"
                android:id="@+id/switch_sys"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textSize="@dimen/dip_14.0"
                />

            <ImageView
                android:layout_width="@dimen/dip_5.0"
                android:layout_height="@dimen/dip_5.0"
                android:id="@+id/switch_sys_im"
                android:layout_alignParentRight="true"
                android:background="@drawable/yuan_hong"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dip_70.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:background="@drawable/kuang_h"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dip_300.0"
                android:layout_height="@dimen/dip_300.0">
                <ImageView
                    android:layout_marginLeft="@dimen/dip_60.0"
                    android:id="@+id/switch_im_state1"
                    android:background="@drawable/zhu_chazuoa_normalno"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dip_60.0"
                    android:layout_height="@dimen/dip_60.0"/>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dip_60.0"
                    android:id="@+id/switch_im_state2"
                    android:background="@drawable/zhu_chazuoa_normalno"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dip_60.0"
                    android:layout_height="@dimen/dip_60.0"/>

            </RelativeLayout>

        </RelativeLayout>






    </RelativeLayout>

    <LinearLayout
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_134.0"
        >

        <Button
            android:layout_marginRight="@dimen/dip_36.0"
            android:background="@drawable/yuan"
            android:id="@+id/switch_state1"
            android:text="开启"
            android:layout_width="@dimen/dip_68.0"
            android:layout_height="@dimen/dip_68.0" />
        <Button
            android:background="@drawable/yuan"
            android:id="@+id/switch_state2"
            android:text="开启"
            android:layout_width="@dimen/dip_68.0"
            android:layout_height="@dimen/dip_68.0" />
    </LinearLayout>

</LinearLayout>
