<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_48.0">
        <ImageView
            android:onClick="fh"
            android:id="@+id/search_fh"
            android:background="@drawable/fh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip_10.0"
            android:layout_width="@dimen/dip_30.0"
            android:layout_height="@dimen/dip_30.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dip_18.0"
            android:text="定时设置"
            />

        <ImageView
            android:gravity="center"
            android:layout_width="@dimen/dip_30.0"
            android:layout_height="@dimen/dip_30.0"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10.0"
            android:background="@drawable/icon_tianjiashebei_normal"
            android:onClick="add"
            />


        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_0.5"
            android:background="#fff"
            />
    </RelativeLayout>

    <com.grasp.training.swipemenulistview.SwipeMenuListView2
        android:id="@+id/timing_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#0000"
        android:listSelector="#00000000"
        android:scrollbars="none"
        >

    </com.grasp.training.swipemenulistview.SwipeMenuListView2>
</LinearLayout>