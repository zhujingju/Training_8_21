<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/condition_timing_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/app_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_48.0">
            <ImageView
                android:id="@+id/condition_timing_fh"
                android:background="@drawable/fh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_10.0"
                android:layout_width="@dimen/dip_40.0"
                android:layout_height="@dimen/dip_40.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dip_18.0"
                android:text="@string/condition8"
                />

            <TextView
                android:id="@+id/condition_timing_save"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_40.0"
                android:textColor="@drawable/b_wc"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dip_20.0"
                android:textSize="@dimen/dip_20.0"
                android:text="保存"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_0.5"
            android:background="@color/white"
            />



        <RelativeLayout
            android:layout_marginLeft="@dimen/dip_20.0"
            android:layout_marginRight="@dimen/dip_10.0"
            android:layout_marginTop="@dimen/dip_10.0"
            android:id="@+id/condition_timing_layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50.0">

            <TextView

                android:id="@+id/condition_timing_cf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/dip_18.0"
                android:text="重复"
                android:layout_centerVertical="true"

                />
            <LinearLayout

                android:layout_marginLeft="@dimen/dip_40.0"
                android:layout_toRightOf="@+id/condition_timing_cf"

                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/condition_timing_tv1"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/dip_14.0"
                    android:gravity="right"
                    android:text="永不"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="@dimen/dip_30.0"
                    android:layout_height="@dimen/dip_30.0"
                    android:background="@drawable/gengduo"
                    />
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f0f0f0"
            />


        <RelativeLayout
            android:layout_marginLeft="@dimen/dip_20.0"
            android:layout_marginRight="@dimen/dip_10.0"
            android:id="@+id/condition_timing_layout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50.0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/dip_18.0"
                android:text="时间"
                android:layout_centerVertical="true"
                />
            <LinearLayout

                android:gravity="center"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/condition_timing_tv2"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/dip_16.0"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="@dimen/dip_30.0"
                    android:layout_height="@dimen/dip_30.0"
                    android:background="@drawable/gengduo"
                    />
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f0f0f0"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>