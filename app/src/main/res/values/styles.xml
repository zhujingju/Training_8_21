<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppTheme_textinputLayout" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorAccent">#3498db</item>
        <item name="android:textColorHint">@color/hui</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ErrorTextAppearance" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent" >@color/c_6793e4</item>

    </style>
</resources>
